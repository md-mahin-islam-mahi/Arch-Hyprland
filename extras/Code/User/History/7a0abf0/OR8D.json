{
    "workbench.startupEditor": "none",
    "workbench.colorTheme": "Theme Flat",
    "workbench.iconTheme": "material-icon-theme",
    "files.autoSave": "afterDelay",
    "editor.fontSize": 22,
    "editor.mouseWheelZoom": true,
    "editor.cursorBlinking": "expand",
    "editor.fontLigatures": true,
    "terminal.integrated.fontSize": 18,
    "editor.fontFamily": "'Jetbrains Mono','Droid Sans Mono', 'monospace', monospace",
    "workbench.colorCustomizations": {
        "editor.background": "#2e3440",
        "sideBar.background": "#2e3440",
        "sideBar.border": "#2e3440",
        "sideBar.foreground": "#98b0d3",
        "editorGroupHeader.tabsBackground": "#2e34404b",
        "activityBar.background": "#2e3440",
        "activityBar.border": "#2e3440",
        "activityBar.foreground": "#eafeff",
        "tab.activeBackground": "#262b35",
        "tab.activeForeground": "#ffffff",
        "tab.activeBorder": "#2e3440",
        "tab.border": "#2e3440",
        "tab.inactiveBackground": "#2e3440",
        "tab.inactiveForeground": "#b3b3b3",
    },
    "window.menuBarVisibility": "toggle",
    "workbench.statusBar.visible": false,
    // "breadcrumbs.enabled": false,
    "editor.smoothScrolling": true,
    "editor.scrollbar.vertical": "hidden",
    "editor.mouseWheelScrollSensitivity": 2,
    "editor.wordWrap": "on",
    "terminal.integrated.defaultProfile.linux": "zsh",
    "explorer.confirmDelete": false,
}